<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@color/colorPrimaryDark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:clickable="true"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="1">
    <LinearLayout
        android:id="@+id/nav_header_ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.netease.nim.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/nav_header_ci_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/a" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:text="@string/nav_header_grade"
            android:textColor="#FF9C09"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/nav_header_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:text="@string/nav_header_name"
            android:textColor="@color/colorWhite"
            android:textSize="26dp" />

        <ImageView
            android:id="@+id/nav_header_iv_sex"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_weight="0.11"
            android:src="@mipmap/nav_header_nv" />
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/nav_header_tv_account"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:text="ID:61833428"
        android:textColor="#343434"
        android:textSize="20dp" />
</LinearLayout>
